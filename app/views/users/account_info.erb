<h1><%=@user.username%>'s Collection</h1>
<a href='/'>Home</a><br><br>

<h3>Games:</h3>
<%@user.games.each do |game|%>
    <h2><%=game.title%></h2>
    <%if !game.developer.empty?%>
        <h4><%="By " + game.developer%></h4><br>
    <%end%>
    <%if !game.description.empty?%>
        <label><%=game.description if !game.description.empty?%></label><br><br>
    <%end%>
    <a href=<%="/games/"+game.id.to_s%>>More Info</a><br><br>
<%end%>

<h3>Consoles:</h3>
<%@user.consoles.each do |console|%>
    <h2><%=console.name%></h3>
    <%if !console.company.empty?%>
        <h4><%=console.company%></h4><br>
    <%end%>
    <a href=<%="/consoles/"+console.id.to_s%>>More Info</a>
    <br><br>
<%end%>